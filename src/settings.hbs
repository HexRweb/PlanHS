---
init: settings
---
<section class="misc section row">
	<div class="input-field col s12">
		 <input type="checkbox" id="autosave" name="autosave" />
		 <label for="autosave" class="white-text">Autosave notes (when you click away from a note, it automatically saves!)</label>
	</div>
</section>
{{#if extension}}
<section class="calendar section row" id="calendars">
	<form>
		<div class="input-field col s9">
			<input type="text" id="calendar" name="calendar" class="grey-text text-lighten-1" />
			<label for="calendar" class="white-text">Calendar ID (your gMail / Google Apps email address)</label>
		</div>
		<div class="input-field col s3 center">
			<button type="submit" id="calendar-save" class="btn waves-effect waves-effect-light">Save calendar</button>
		</div>
	</form>
</section>
{{/if}}
<section class="links section" id="links">
	<h4 class="white-text decorated center">Links Setup</h4>
	<blockquote class="white-text flow-text">
		Please fill out all the boxes with links. You can put any link you want.
	</blockquote>
	<form class="orange-text text-darken-4 flow-text">
		<div class="row">
			<div class="input-field col s12 m3">
				<input  id="block-1-link" type="url" class="validate" autocomplete="off" autofocus>
				<label for="block-1-link">1st Block Website Link</label>
			</div>
			<div class="input-field col s12 m3">
				<input  id="block-2-link" type="url" class="validate" autocomplete="off">
				<label for="block-2-link">2nd Block Website Link</label>
			</div>
			<div class="input-field col s12 m3">
				<input  id="block-3-link" type="url" class="validate" autocomplete="off">
				<label for="block-3-link">3rd Block Website Link</label>
			</div>
			<div class="input-field col s12 m3">
				<input  id="block-4-link" type="url" class="validate" autocomplete="off">
				<label for="block-4-link">4th Block Website Link</label>
			</div>
		</div>
		<div class="row">
			<div class="input-field col s12 m3">
				<input   id="block-5-link" type="url" class="validate" autocomplete="off">
				<label for="block-5-link">5th Block Website Link</label>
			</div>
			<div class="input-field col s12 m3">
				<input  id="block-6-link" type="url" class="validate" autocomplete="off">
				<label for="block-6-link">6th Block Website Link</label>
			</div>
			<div class="input-field col s12 m3">
				<input  id="block-7-link" type="url" class="validate" autocomplete="off">
				<label for="block-7-link">7th Block Website Link</label>
			</div>
			<div class="input-field col s12 m3">
				<input id="block-8-link" type="text" class="validate" autocomplete="off">
				<label for="block-8-link">8th Block Website Link</label>
			</div>
		</div>
		<div class="row center">
			<button class="waves-effect waves-light btn" id="save-links" type="submit">Save</button>
		</div>
	</form>
</section>
<section class="emails section" id="emails">
	<h4 class="white-text decorated center">Email Setup</h4>
	<blockquote class="white-text flow-text">
		Put your teacher's email to quickly email them from the home page.
	</blockquote>
	<form class=" orange-text text-darken-4 flow-text">
		<div class="row">
			<div class="input-field col s12 m3">
				<input id="block-1-email" type="text" class="validate" autocomplete="off">
				<label for="block-1-email">1st Block Email</label>
			</div>
			<div class="input-field col s12 m3">
				<input id="block-2-email" type="text" class="validate" autocomplete="off">
				<label for="block-2-email">2nd Block Email</label>
			</div>
			<div class="input-field col s12 m3">
				<input id="block-3-email" type="text" class="validate" autocomplete="off">
				<label for="block-3-email">3rd Block Email</label>
			</div>
			<div class="input-field col s12 m3">
				<input id="block-4-email" type="text" class="validate" autocomplete="off">
				<label for="block-4-email">4th Block Email</label>
			</div>
		</div>
		<div class="row">
